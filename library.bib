journal = {The Lancet Infectious Diseases},
number = {9},
pmid = {28629876},
title = {{Effect of antibiotic stewardship on the incidence of infection and colonisation with antibiotic-resistant bacteria and Clostridium difficile infection: a systematic review and meta-analysis}},
volume = {17},
year = {2017}
}
